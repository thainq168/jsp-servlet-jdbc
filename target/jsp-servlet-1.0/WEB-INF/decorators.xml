<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
	<!-- Any urls that are excludes will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/api*</pattern>
	</excludes>

	<!-- apply web template -->
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
	
	<!-- apply admin template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
</decorators>